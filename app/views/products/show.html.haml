= render :partial => "/header"

#showProduct.container
  .row
    .col-sm-4
      =image_tag @product.pictures[0].image_url(:thumb).to_s
    .col-sm-6
      .row
        .col-sm-12.bottomBorder
          = @product.ProductName
      .row
        .col-sm-4.field.fieldLabel
          Price:
        .col-sm-8.field.fieldValue
          = @product.QuotedPrice
      .row
        .col-sm-4.field.fieldLabel
          Min Quantity:
        .col-sm-8.field.fieldValue
          = @product.MinimumOrder
      .row
        .col-sm-4.field.fieldLabel
          Supply Ability:
        .col-sm-8.field.fieldValue
          = @product.SupplyAbility
      .row
        .col-sm-4.field.fieldLabel
          Payment Terms:
        .col-sm-8.field.fieldValue
          = @product.PaymentTerms
      .row
        .col-sm-4.field.fieldLabel
          Delivery Time:
        .col-sm-8.field.fieldValue
          = @product.DeliveryTime
      .row.btnField
        .col-sm-4.field
          %button.btn.btn-success.btn-product
            %span.glyphicon.glyphicon-file{:aria=>{:hidden => 'true'}} 
            &nbsp;&nbsp;Get Quotation
        .col-sm-4.field
          %button.btn.btn-success.btn-product 
            %span.glyphicon.glyphicon-envelope{:aria=>{:hidden => 'true'}} 
            &nbsp;&nbsp;Contact Supplier
            
= render :partial =>"/footer"